		$query = "select * from ra;";
	}
        $sth = $this->db->prepare($query);
        $sth->execute();
	try
	{
       		$todos = $sth->fetchAll();
	}
	catch(PDOException $e)
	{
		$todos = 'Query Submitted';
	}
//$todos =0;     
  return $this->response->withJson($todos);
    });


